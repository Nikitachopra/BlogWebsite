<div class="header11">
  <img src="/assets/cropped-swaminathan.jpg">
</div>

<div id="navbar">
  <a class="<%= controller_name != "about_us" ? "active" : "" %>" href="/">Home</a>
  <!-- <a href="javascript:void(0)">Articles</a> -->
  <a href="/about_us" class="<%= controller_name == 'about_us' && action_name == 'index' ? 'active' : '' %>">About <%= ORG_NAME%></a>
</div>


<script type="text/javascript">
	window.onscroll = function() {myFunction()};

var navbar = document.getElementById("navbar");
var sticky = navbar.offsetTop;

function myFunction() {
  if (window.pageYOffset >= sticky) {
    navbar.classList.add("sticky")
  } else {
    navbar.classList.remove("sticky");
  }
  var offset = $("#navbar").offset().top + $("#navbar").height();
  $('.my_side_bar').offset({top:offset});
  var footer_top = $("#footer").offset().top;
  $('.my_side_bar').css('bottom',footer_top)
}
</script>